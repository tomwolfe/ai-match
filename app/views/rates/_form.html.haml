= form_for [@user, @rate] do |f|
  - if @rate.errors.any?
    #error_explanation
      %h2= "#{pluralize(@rate.errors.count, "error")} prohibited this rating from being saved:"
      %ul
        - @rate.errors.full_messages.each do |message|
          %li= message

  .field
    = f.label :value, 'Like?'
    = f.check_box :value
  .actions
    = f.submit 'Save'
