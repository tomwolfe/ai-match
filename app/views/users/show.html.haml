- title "Showing user: #{@user.name}"

%ul#details
  %li
    Picture
    =image_tag(@user.picture) if @user.picture
  %li
    Sex:
    = @user.sex
  %li
    Age:
    = @user.age
  %li
    Height in inches:
    = @user.height
  %li
    Weight in pounds:
    = @user.weight
  %li
    Orientation:
    = @user.orientation
  %li
    Location:
    = @user.location
  %li
    Distance:
    =@user.distance_to(current_user)
  %li
    Email:
    = @user.email
  %li
    Twitter:
    = link_to @user.twitter, @user.twitter if @user.twitter
  %li
    About me:
    = @user.about
  - unless @user.id == current_user.id
    - rating=@user.raters.find_by(rater_id: current_user.id)
    - if rating.nil?
      %li
        Rate User:
        = link_to 'Rate', new_user_rate_path(@user)
    - else
      %li
        Edit user rating:
        = link_to 'Edit', edit_user_rate_path(@user,rating)


- if @user.id == current_user.id
  = link_to 'Edit', edit_user_path(@user)
  = button_to 'Delete your account', @user, :method => :delete, data: { confirm: 'Are you sure you want to delete your account?' }